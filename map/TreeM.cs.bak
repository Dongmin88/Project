using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class TreeM : MonoBehaviour
{
    Transform[] trees;
    public int length;
    // Start is called before the first frame update
    void Start()
    {
        trees = gameObject.GetComponentsInChildren<Transform>();
    }

    // Update is called once per frame
    void Update()
    {
        Destroy_tree();
    }
    public void Destroy_tree()
    {
        if (Singleton.instance.pTree.flag == (char)eMSG.em_OBJECT_TREE)
        {
            string ref_name = Singleton.instance.pTree.name;
            for(int i = 0; i < trees.Length; i++)
            {
                if (ref_name.Equals(trees[i].name))
                {
                    
                    Destroy(trees[i].gameObject);
                    Singleton.instance.Reset_Tree();
                }
            }
        }
        length = trees.Length;
    }
}
