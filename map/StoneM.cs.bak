using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class StoneM : MonoBehaviour
{
    Transform[] Stones;
    public int length;
    // Start is called before the first frame update
    void Start()
    {
        Stones = gameObject.GetComponentsInChildren<Transform>();
    }

    // Update is called once per frame
    void Update()
    {
        Destroy_Stone();
    }
    public void Destroy_Stone()
    {
        if (Singleton.instance.pStone.flag == (char)eMSG.em_OBJECT_STONE)
        {
            string ref_name = Singleton.instance.pStone.name;
            for (int i = 0; i < Stones.Length; i++)
            {
                if (ref_name.Equals(Stones[i].name))
                {

                    Destroy(Stones[i].gameObject);
                    Singleton.instance.Reset_Stone();
                }
            }
        }
        length = Stones.Length;
    }
}
